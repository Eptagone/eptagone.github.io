---
import Layout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const title = "Projects";
const description = "Projects I've worked on";

const projects = await getCollection("projects");
---

<Layout title={title} description={description}>
    <div class="flex w-full flex-col">
        <section class="mx-auto w-full max-w-5xl p-6">
            <h1 class="mb-4 text-3xl font-semibold">Projects</h1>
            <ul class="mb-4 flex flex-col gap-4">
                {
                    projects.map((project) => (
                        <li class="md:basis transition-transform duration-300 ease-out hover:scale-105 md:basis-1/3">
                            <a href={project.data.link} class="block rounded-md bg-white p-4 shadow-md dark:bg-gray-900 dark:shadow-gray-700">
                                <h2 class="text-xl font-semibold">{project.data.name}</h2>
                                <p class="text-gray-600 dark:text-gray-300">{project.data.description}</p>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>
    </div>
</Layout>
