{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "types": [
            "astro/client"
        ],
        "baseUrl": ".",
        "paths": {
            "@images/*": [
                "src/assets/images/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "exclude": [
        "dist"
    ]
}
